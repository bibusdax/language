{% extends 'layout.twig' %}

{% block content %}
  <div class="container">
    <h1 class="text-center my-4">Language Learning Dashboard</h1>
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Language Library</h5>
            <p class="card-text">Manage your language library and add new words.</p>
            <a href="{{ path_for('language.index') }}" class="btn btn-primary">Manage Library</a>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Train</h5>
            <p class="card-text">Train your vocabulary skills with a set of random words.</p>
            <a href="{{ path_for('language.train') }}" class="btn btn-primary">Train Now</a>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Edit Profile</h5>
            <p class="card-text">Update your profile information and change your password.</p>
            <a href="{{ path_for('auth.profile') }}" class="btn btn-primary">Edit Profile</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
