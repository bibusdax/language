{% extends 'base.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center">{{ title }}</h2>
    </div>
  </div>
  {% if message %}
  <div class="row">
    <div class="col-12">
      <p class="alert alert-success">{{ message }}</p>
    </div>
  </div>
  {% endif %}
  {% if word %}
  <div class="row">
    <div class="col-12">
      <h4 class="text-center">{{ word.original }}</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <form action="{{ url_for('train_post') }}" method="post">
        <div class="form-group">
          <label for="translation">Translation</label>
          <input type="text" class="form-control" id="translation" name="translation">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Check</button>
        </div>
      </form>
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}
